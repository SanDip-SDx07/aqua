{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"],
      "@shared": ["packages/shared"],
      "@shared/*": ["packages/shared/*"],
      "@utils": ["packages/utils"],
      "@utils/*": ["packages/utils/*"]
    }
  }
}
